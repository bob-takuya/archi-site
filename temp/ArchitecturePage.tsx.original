    return suggestions;
  }, [researchData]);

  useEffect(() => {
    // URLã‹ã‚‰ã‚¯ã‚¨ãƒªãƒ‘ãƒ©ãƒ¡ãƒ¼ã‚¿ã‚’è§£æ
    const queryParams = new URLSearchParams(location.search);
    const tag = queryParams.get('tag');
    const search = queryParams.get('search');
    const year = queryParams.get('year');
    const prefecture = queryParams.get('prefecture');
    const category = queryParams.get('category');
    const architect = queryParams.get('architect');
    const sort = queryParams.get('sort');
    
    // Build active filters for display
    const filters = [];
    if (tag) filters.push({ type: 'ã‚¿ã‚°', value: tag });
    if (year) filters.push({ type: 'å¹´', value: year });
    if (prefecture) filters.push({ type: 'åœ°åŸŸ', value: prefecture });
    if (category) filters.push({ type: 'ã‚«ãƒ†ã‚´ãƒª', value: category });
    if (architect) filters.push({ type: 'å»ºç¯‰å®¶', value: architect });
    setActiveFilters(filters);
    
    // ä¸¦ã³æ›¿ãˆã®è¨­å®š
    if (sort) {
      setSortBy(sort);
    }
    
    // ã‚¿ã‚°ãŒè¤‡æ•°ã‚ã‚‹å ´åˆï¼ˆã‚«ãƒ³ãƒåŒºåˆ‡ã‚Šï¼‰
    if (tag) {
      const tags = tag.split(',').map(t => t.trim()).filter(t => t);
      const baseTags = new Set();
      const tagWithYears = [];
      
      // ã‚¿ã‚°ã‚’è§£æã—ã¦å¹´åº¦ã‚’å«ã‚€ã‚¿ã‚°ã¨åŸºæœ¬ã‚¿ã‚°ã«åˆ†ã‘ã‚‹
      tags.forEach(t => {
        const yearMatch = t.match(/\d{4}å¹´\d{1,2}æœˆå·?/);
        if (yearMatch) {
          const baseTag = t.replace(yearMatch[0], '').trim();
          if (baseTag) {
            baseTags.add(baseTag);
            tagWithYears.push(t);
          }
        } else {
          baseTags.add(t);
        }
      });
      
      setSelectedTags(Array.from(baseTags));
      setSelectedTagsWithYears(tagWithYears);
      setTagQuery(tag);
      setSearchTerm(`tag:${tag}`);
      fetchArchitectures(1, `tag:${tag}`, sort || sortBy);
    } else if (year) {
      setSearchTerm(`year:${year}`);
      fetchArchitectures(1, `year:${year}`, sort || sortBy);
    } else if (prefecture) {
      setSearchTerm(`prefecture:${prefecture}`);
      fetchArchitectures(1, `prefecture:${prefecture}`, sort || sortBy);
    } else if (category) {
      setSearchTerm(`category:${category}`);
      fetchArchitectures(1, `category:${category}`, sort || sortBy);
    } else if (architect) {
      setSearchTerm(`architect:${architect}`);
      fetchArchitectures(1, `architect:${architect}`, sort || sortBy);
    } else if (search) {
      setSearchTerm(search);
      fetchArchitectures(1, search, sort || sortBy);
    } else {
      fetchArchitectures(1, searchTerm, sort || sortBy);
    }
  }, [location.search]);

  const fetchArchitectures = async (page, search = searchTerm, sort = sortBy) => {
    setLoading(true);
    try {
      let result;
      
      // Parse search query and call appropriate method
      if (!search || search.trim() === '') {
        // No search - get all architectures
        result = await getAllArchitectures(page, itemsPerPage);
      } else if (search.startsWith('tag:')) {
        // Tag search
        const tag = search.substring(4).trim();
        result = await searchArchitectures('', { tag }, page, itemsPerPage);
      } else if (search.startsWith('year:')) {
        // Year search
        const year = parseInt(search.substring(5).trim());
        result = await searchArchitectures('', { year }, page, itemsPerPage);
      } else if (search.startsWith('architect:')) {
        // Architect search
        const architect = search.substring(10).trim();
        result = await searchArchitectures('', { architect }, page, itemsPerPage);
      } else if (search.startsWith('category:')) {
        // Category search
        const category = search.substring(9).trim();
        result = await searchArchitectures('', { category }, page, itemsPerPage);
      } else if (search.startsWith('prefecture:')) {
        // Prefecture search - search in address field
        const prefecture = search.substring(11).trim();
        result = await searchArchitectures(prefecture, {}, page, itemsPerPage);
      } else {
        // Regular text search
        result = await searchArchitectures(search, {}, page, itemsPerPage);
      }
      
      setArchitectures(result.results);
      setTotalItems(result.total);
      setCurrentPage(page);
    } catch (error) {
      console.error('Error fetching architectures:', error);
      setArchitectures([]);
      setTotalItems(0);
    } finally {
      setLoading(false);
    }
  };

  const handlePageChange = (event, value) => {
    setCurrentPage(value);
    fetchArchitectures(value, searchTerm, sortBy);
